{
  "manifest_version": 3,
  "name": "Tern",
  "description": "Check the cost of gas for your Google Maps planned trip.",
  "version": "1",
  "icons": {
    "16": "/logo/tern16-2.png",
    "48": "/logo/tern48-2.png",
    "128": "/logo/tern128-2.png"
},
"action": {
    "default_icon": {
        "16": "/logo/tern16-2.png",
        "48": "/logo/tern48-2.png",
        "128": "/logo/tern128-2.png"
    }
},
  "content_scripts": [
    {
      "matches": [
        "https://www.google.ca/maps/*",
        "https://www.google.com/maps/*",
        "https://www.google.com.ua/maps/*"
      ],
      "run_at": "document_end",
      "js": [],
      "css": [],
      "media": []
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["http://127.0.0.1:8100/*", "https://www.google.com/", "http://www.google.com/"],
  "permissions": [
    "allowAllRequests",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "*://*.google.com/*",
    "https://www.google.com/maps/*",
    "http://127.0.0.1:8100/*"
  ]
}
